<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="filter">

		<field
				name="search"
				type="text"
				label="COM_WORKFLOW_FILTER_SEARCH_LABEL"
				description="COM_WORKFLOW_FILTER_SEARCH_DESC"
				hint="JSEARCH_FILTER"
		/>

		<field
				name="condition"
				type="list"
				label="COM_WORKFLOW_RADIO_CONDITION_LABEL"
				description="COM_WORKFLOW_RADIO_CONDITION_LABEL_DESC"
				class="input-xxlarge input-large-text"
				onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="3">COM_WORKFLOW_PUBLISHED</option>
			<option value="2">COM_WORKFLOW_UNPUBLISHED</option>
			<option value="1">COM_WORKFLOW_TRASHED</option>
		</field>

		<field
				name="created_by"
				type="author"
				label="COM_CONTENT_FILTER_AUTHOR"
				description="COM_CONTENT_FILTER_AUTHOR_DESC"
				onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_AUTHOR</option>
		</field>

	</fields>

	<fields name="list">

		<field
				name="fullordering"
				type="list"
				label="JGLOBAL_SORT_BY"
				description="JGLOBAL_SORT_BY"
				default="id ASC"
				statuses="*,0,1,2,-2"
				onchange="this.form.submit();"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="published ASC">JSTATUS_ASC</option>
			<option value="published DESC">JSTATUS_DESC</option>
			<option value="title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="created_by ASC">JAUTHOR_ASC</option>
			<option value="created_by DESC">JAUTHOR_DESC</option>
			<option value="id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
				name="limit"
				type="limitbox"
				label="COM_CATEGORIES_LIST_LIMIT"
				description="COM_CATEGORIES_LIST_LIMIT_DESC"
				default="25"
				onchange="this.form.submit();"
		/>
	</fields>
</form>
