<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldprefix="Joomla\Component\Workflow\Administrator\Field">

		<field
				name="id"
				type="text"
				label="JGLOBAL_FIELD_ID_LABEL"
				description="JGLOBAL_FIELD_ID_DESC"
				default="0"
				class="readonly"
				size="10"
				readonly="true"
		/>


		<field
				name="title"
				type="text"
				label="COM_WORKFLOW_FIELD_TITLE_LABEL"
				description="COM_WORKFLOW_FIELD_TITLE_DESC"
				class="input-xxlarge input-large-text"
				size="40"
				required="true"
		/>

		<field
				name="from"
				type="sql"
				label="Select an article"
				query="SELECT id, title FROM #__workflow_status"
				key_field="id"
		/>

		<field
				name="to"
				type="sql"
				label="Select an article"
				query="SELECT id, title FROM #__workflow_status"
				key_field="id"
		/>


	</fieldset>


</form>
