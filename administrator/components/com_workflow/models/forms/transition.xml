<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldprefix="Joomla\Component\Workflow\Administrator\Field">

		<field
				name="id"
				type="text"
				label="JGLOBAL_FIELD_ID_LABEL"
				description="JGLOBAL_FIELD_ID_DESC"
				default="0"
				class="readonly"
				size="10"
				readonly="true"
		/>

		<field
				name="title"
				type="text"
				label="COM_WORKFLOW_FIELD_TITLE_LABEL"
				description="COM_WORKFLOW_FIELD_TITLE_DESC"
				class="input-xxlarge input-large-text"
				size="40"
				required="true"
		/>

		<field
				name="description"
				type="textarea"
				label="COM_WORKFLOW_FIELD_DESC_LABEL"
				description="COM_WORKFLOW_FIELD_DESC_DESC"
				class="input-xxlarge input-large-text"
		/>

	</fieldset>

	<fieldset name="params" label="COM_WORKFLOW_PARAMS_LABEL">
		<field
				name="from_status_id"
				type="sql"
				label="COM_WORKFLOW_FROM_STATUS"
				description="COM_WORKFLOW_FROM_STATUS_DESC"
				query="SELECT id AS value, title AS from_status_id FROM #__workflow_status"
		        required="true"
		/>

		<field
				name="to_status_id"
				type="sql"
				label="COM_WORKFLOW_TO_STATUS"
				description="COM_WORKFLOW_TO_STATUS_DESC"
				query="SELECT id AS value, title AS to_status_id FROM #__workflow_status"
		        required="true"
		/>

	</fieldset>
</form>
